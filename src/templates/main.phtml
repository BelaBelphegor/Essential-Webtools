	<script src="https://cdn.jsdelivr.net/react/0.14.0-rc1/react-dom.js"></script>
	<script>
		class MyApps extends React.Component
		{
			constructor()
			{
				super();
			}
			render()
			{
				return (
				React.createElement('form', { className:"pure-form" },
						React.createElement('fieldset', {},
							React.createElement('legend', {}, "A compact inline form"),
							React.createElement('input', { type:"email", placeholder:"E-mail"}),
							React.createElement('input', { type:"password", placeholder:"Password"}),
							React.createElement('button', { type:"submit", className:"pure-button pure-button-primary" }, "Sign in"))
						)
				);
			}
		}
		ReactDOM.render(React.createElement(MyApps), document.getElementById('react-app'));
	</script>
	</body>
</html>
